{
  "tabWidth": 2,
  "semi": false,
  "singleQuote": true,
  "overrides": [
    {
      "files": ["*.md", "*.uml", "*.puml", "*.tex"],
      "options": {
        "tabWidth": 4
      }
    },
    {
      "files": "*.json",
      "options": {
        "tabWidth": 2
      }
    },
    {
      "files": ["*.py", "*.lua"],
      "options": {
        "tabWidth": 4
      }
    },
    {
      "files": ["*.html"],
      "options": {
        "tabWidth": 2
      }
    },
    {
      "files": ["*.css"],
      "options": {
        "tabWidth": 4
      }
    }
  ]
}
